<Window x:Class="AutoMouse.TransparentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoMouse"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        Background="#88FFFFFF"
        Title="TransparentWindow" SizeToContent="WidthAndHeight">
    <StackPanel Orientation="Horizontal">
        <Image Source="/Resources/Icon.ico" Width="30" Height="30" Margin="3"/>
        <Label x:Name="InfoLabel" FontSize="18" FontWeight="Bold" VerticalContentAlignment="Center">왼쪽 클릭 활성화</Label>
    </StackPanel>
</Window>
